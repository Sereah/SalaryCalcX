.contain {
    flex-direction: column;
    width: 100%;
    display: flex;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
}

.salary_input {
    flex-direction: row;
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.salary_text {
    display: flex;
    flex-direction: row;
    margin: 10rpx;
    margin-top: 5rpx;
    font-size: 30rpx;
}

